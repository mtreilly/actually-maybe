---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_TITLE } from '../consts';
import { formatReadingTime, calculateReadingTime } from '../utils/readingTime';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Create searchable data
const searchData = posts.map(post => ({
	id: post.id,
	title: post.data.title,
	description: post.data.description,
	topics: post.data.topics.join(', '),
	pubDate: post.data.pubDate,
	type: post.data.type,
	readingTime: formatReadingTime(calculateReadingTime(post.data.description)),
}));
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`Search | ${SITE_TITLE}`}
			description="Search posts"
		/>
	</head>
	<body>
		<Header />
		<main>
			<h1>Search</h1>
			<div class="search-container">
				<input
					type="search"
					id="search-input"
					class="search-input"
					placeholder="Search posts by title, description, or topic..."
					autocomplete="off"
				/>
			</div>

			<div id="search-results" class="search-results"></div>

			{posts.length === 0 && (
				<p class="no-posts">No posts found.</p>
			)}
		</main>
	<Footer />
	</body>
</html>

<script define:vars={{ searchData }}>
	import Fuse from 'fuse.js';

	const fuse = new Fuse(searchData, {
		keys: ['title', 'description', 'topics'],
		threshold: 0.3,
		distance: 100,
	});

	const searchInput = document.getElementById('search-input');
	const resultsContainer = document.getElementById('search-results');

	function renderResults(results) {
		if (results.length === 0) {
			resultsContainer.innerHTML = '<p class="no-results">No posts found. Try a different search.</p>';
			return;
		}

		const html = results
			.map(result => {
				const post = result.item;
				return `
					<a href="/blog/${post.id}/" class="search-result">
						<h3 class="search-result-title">${post.title}</h3>
						<p class="search-result-meta">
							<span class="search-result-type">${post.type}</span>
							<span class="search-result-sep">Â·</span>
							<span class="search-result-time">${post.readingTime}</span>
						</p>
						<p class="search-result-desc">${post.description}</p>
						${post.topics ? `<p class="search-result-topics">Topics: ${post.topics}</p>` : ''}
					</a>
				`;
			})
			.join('');

		resultsContainer.innerHTML = html;
	}

	searchInput.addEventListener('input', (e) => {
		const query = e.target.value.trim();
		if (query.length === 0) {
			resultsContainer.innerHTML = '';
			return;
		}

		const results = fuse.search(query);
		renderResults(results);
	});

	// Focus on input
	searchInput.focus();
</script>

<style>
	h1 {
		margin-bottom: 1.5rem;
	}

	.search-container {
		margin-bottom: 2rem;
	}

	.search-input {
		width: 100%;
		padding: 0.75rem;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 4px;
		font-size: 1rem;
		background-color: transparent;
		color: rgb(var(--black));
		transition: border-color 0.2s;
	}

	.search-input:focus {
		outline: none;
		border-color: var(--accent);
		box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.1);
	}

	.search-input::placeholder {
		color: rgb(var(--gray));
	}

	.search-results {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.search-result {
		padding: 1rem;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 4px;
		text-decoration: none;
		transition: all 0.2s;
	}

	.search-result:hover {
		border-color: var(--accent);
		background-color: rgba(37, 99, 235, 0.02);
	}

	.search-result-title {
		margin: 0 0 0.5rem 0;
		font-size: 1.125rem;
		color: rgb(var(--black));
	}

	.search-result:hover .search-result-title {
		color: var(--accent);
	}

	.search-result-meta {
		margin: 0 0 0.5rem 0;
		font-size: 0.875rem;
		color: rgb(var(--gray));
	}

	.search-result-sep {
		margin: 0 0.25rem;
	}

	.search-result-desc {
		margin: 0 0 0.5rem 0;
		font-size: 0.9375rem;
		color: rgb(var(--gray));
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.search-result-topics {
		margin: 0;
		font-size: 0.8125rem;
		color: rgb(var(--gray));
	}

	.no-results {
		text-align: center;
		color: rgb(var(--gray));
		padding: 2rem 0;
	}

	@media (max-width: 720px) {
		.search-input {
			font-size: 16px;
		}
	}
</style>
