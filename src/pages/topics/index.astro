---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';

const posts = await getCollection('blog');

// Count posts per topic
const topicCounts = new Map<string, number>();
posts.forEach(post => {
	post.data.topics.forEach(topic => {
		topicCounts.set(topic, (topicCounts.get(topic) || 0) + 1);
	});
});

// Sort topics by count (descending), then alphabetically
const sortedTopics = Array.from(topicCounts.entries())
	.sort((a, b) => {
		if (b[1] !== a[1]) return b[1] - a[1]; // Sort by count
		return a[0].localeCompare(b[0]); // Then alphabetically
	});

// Group topics by frequency
const groupTopics = (topics: Array<[string, number]>) => {
	const popular = topics.filter(([, count]) => count >= 5);
	const regular = topics.filter(([, count]) => count >= 2 && count < 5);
	const emerging = topics.filter(([, count]) => count < 2);
	return { popular, regular, emerging };
};

const { popular, regular, emerging } = groupTopics(sortedTopics);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`Topics | ${SITE_TITLE}`}
			description="Browse all topics"
		/>
	</head>
	<body>
		<Header />
		<main>
			<h1>Topics</h1>
			<p class="subtitle">{sortedTopics.length} {sortedTopics.length === 1 ? 'topic' : 'topics'}</p>

			{popular.length > 0 && (
				<div class="topic-group">
					<h2 class="group-label">Popular</h2>
					<div class="topics-list">
						{popular.map(([topic, count]) => (
							<a href={`/topics/${topic}`} class="topic-item popular">
								<span class="topic-name">{topic}</span>
								<span class="topic-count">{count}</span>
							</a>
						))}
					</div>
				</div>
			)}

			{regular.length > 0 && (
				<div class="topic-group">
					<h2 class="group-label">Regular</h2>
					<div class="topics-list">
						{regular.map(([topic, count]) => (
							<a href={`/topics/${topic}`} class="topic-item regular">
								<span class="topic-name">{topic}</span>
								<span class="topic-count">{count}</span>
							</a>
						))}
					</div>
				</div>
			)}

			{emerging.length > 0 && (
				<div class="topic-group">
					<h2 class="group-label">Emerging</h2>
					<div class="topics-list">
						{emerging.map(([topic, count]) => (
							<a href={`/topics/${topic}`} class="topic-item emerging">
								<span class="topic-name">{topic}</span>
								<span class="topic-count">{count}</span>
							</a>
						))}
					</div>
				</div>
			)}
		</main>
	</body>
</html>

<style>
	h1 {
		margin-bottom: 0.5rem;
	}

	.subtitle {
		color: rgb(var(--gray));
		font-size: 0.875rem;
		margin-bottom: 2.5rem;
	}

	.topic-group {
		margin-bottom: 2.5rem;
	}

	.group-label {
		font-size: 0.8125rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: rgb(var(--gray));
		margin: 0 0 1rem 0;
		padding-bottom: 0.5rem;
		border-bottom: 1px solid rgba(var(--gray-light), 0.3);
	}

	.topics-list {
		display: flex;
		flex-direction: column;
		gap: 0;
	}

	.topic-item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0.875rem 1rem;
		border-bottom: 1px solid rgba(var(--gray-light), 0.4);
		text-decoration: none;
		color: rgb(var(--black));
		transition: all 0.2s ease;
		border-left: 2px solid transparent;
		margin-left: -0.75rem;
		padding-left: 0.75rem;
	}

	.topic-item:last-child {
		border-bottom: none;
	}

	.topic-item:hover {
		color: var(--accent);
		background-color: rgba(37, 99, 235, 0.02);
		border-left-color: var(--accent);
	}

	.topic-item:hover .topic-count {
		color: var(--accent);
	}

	.topic-name {
		font-weight: 500;
		transition: font-size 0.2s;
	}

	/* Popular topics styling */
	.topic-item.popular .topic-name {
		font-weight: 600;
	}

	/* Emerging topics styling */
	.topic-item.emerging .topic-name {
		opacity: 0.75;
		font-size: 0.95rem;
	}

	.topic-count {
		color: rgb(var(--gray));
		font-size: 0.8125rem;
		transition: color 0.2s;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		min-width: 1.75rem;
		padding: 0.25rem 0.5rem;
		border-radius: 3px;
	}

	.topic-item:hover .topic-count {
		background-color: rgba(37, 99, 235, 0.08);
	}

	@media (min-width: 1200px) {
		.group-label {
			font-size: 0.875rem;
		}

		.topic-item {
			padding: 1rem 1.25rem;
		}
	}

	@media (max-width: 720px) {
		.topic-group {
			margin-bottom: 2rem;
		}

		.topic-item {
			padding: 0.75rem 0.875rem;
			margin-left: -0.5rem;
			padding-left: 0.5rem;
		}
	}
</style>
