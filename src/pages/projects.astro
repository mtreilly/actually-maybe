---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import KeyboardShortcuts from '../components/KeyboardShortcuts.astro';
import { SITE_TITLE } from '../consts';
import { projects } from '../data/projects';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`Projects | ${SITE_TITLE}`}
			description="Selected projects and work"
		/>
	</head>
	<body>
		<Header />
		<KeyboardShortcuts />
		<main>
			<h1>Projects</h1>
			<p class="subtitle">Selected work and ongoing explorations</p>

			<div class="projects-grid">
				{projects.map(project => (
					<div class="project-card">
						<div class="project-header">
							<h2 class="project-name">{project.name}</h2>
							<span class={`project-status status-${project.status.toLowerCase().replace(' ', '-')}`}>
								{project.status}
							</span>
						</div>
						<p class="project-description">{project.description}</p>
						{project.url !== '#' && (
							<a href={project.url} class="project-link" target="_blank" rel="noopener noreferrer">
								View â†’
							</a>
						)}
					</div>
				))}
			</div>
		</main>
	<Footer />
	</body>
</html>

<style>
	h1 {
		margin-bottom: 0.5rem;
	}

	.subtitle {
		color: rgb(var(--gray));
		font-size: 0.875rem;
		margin-bottom: 2rem;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
		margin-bottom: 2rem;
	}

	.project-card {
		border: 1px solid rgb(var(--gray-light));
		border-radius: 6px;
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		transition: border-color 0.2s;
	}

	.project-card:hover {
		border-color: var(--accent);
	}

	.project-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		gap: 1rem;
		margin-bottom: 0.75rem;
	}

	.project-name {
		font-size: 1.125rem;
		margin: 0;
		font-weight: 600;
	}

	.project-status {
		font-size: 0.6875rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		font-weight: 500;
		padding: 0.25rem 0.5rem;
		border-radius: 3px;
		white-space: nowrap;
		flex-shrink: 0;
	}

	.status-active {
		color: rgb(34, 197, 94);
		background-color: rgba(34, 197, 94, 0.1);
	}

	.status-in-progress {
		color: rgb(37, 99, 235);
		background-color: rgba(37, 99, 235, 0.1);
	}

	.status-completed {
		color: rgb(100, 116, 139);
		background-color: rgba(100, 116, 139, 0.1);
	}

	.project-description {
		color: rgb(var(--gray));
		font-size: 0.9375rem;
		line-height: 1.5;
		margin: 0 0 1rem 0;
		flex: 1;
	}

	.project-link {
		color: var(--accent);
		text-decoration: none;
		font-size: 0.9375rem;
		font-weight: 500;
		transition: color 0.2s;
	}

	.project-link:hover {
		text-decoration: underline;
	}

	@media (max-width: 720px) {
		.projects-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
