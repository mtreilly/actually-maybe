<script>
	import { initKeyboardShortcuts } from '../scripts/keyboardShortcuts';
	initKeyboardShortcuts();
</script>

<style>
	:global(#shortcuts-modal) {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: rgba(0, 0, 0, 0.5);
		display: flex;
		align-items: center;
		justify-content: center;
		z-index: 1000;
		animation: fadeIn 0.15s ease-out;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	:global(.shortcuts-modal-content) {
		background: var(--background);
		border: 1px solid rgb(var(--gray-light));
		border-radius: 8px;
		padding: 2rem;
		max-width: 400px;
		max-height: 80vh;
		overflow-y: auto;
		box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
		position: relative;
		animation: slideUp 0.2s ease-out;
	}

	@keyframes slideUp {
		from {
			transform: translateY(10px);
			opacity: 0;
		}
		to {
			transform: translateY(0);
			opacity: 1;
		}
	}

	:global(#shortcuts-title) {
		margin: 0 0 1.5rem 0;
		font-size: 1.25rem;
		font-weight: 600;
	}

	:global(.shortcuts-list) {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	:global(.shortcuts-item) {
		display: flex;
		gap: 1rem;
		align-items: center;
	}

	:global(.shortcuts-key) {
		background-color: rgb(var(--gray-light));
		border: 1px solid rgb(var(--gray));
		border-radius: 4px;
		padding: 0.25rem 0.5rem;
		font-family: monospace;
		font-size: 0.875rem;
		font-weight: 500;
		min-width: 2.5rem;
		text-align: center;
		flex-shrink: 0;
	}

	:global(.shortcuts-description) {
		color: rgb(var(--gray));
		font-size: 0.9375rem;
	}

	:global(.shortcuts-close) {
		position: absolute;
		top: 1rem;
		right: 1rem;
		background: none;
		border: none;
		font-size: 1.5rem;
		cursor: pointer;
		color: rgb(var(--gray));
		padding: 0;
		width: 2rem;
		height: 2rem;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: color 0.2s;
	}

	:global(.shortcuts-close:hover) {
		color: rgb(var(--black));
	}
</style>
