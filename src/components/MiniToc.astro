---
interface Props {
	headings?: Array<{ depth: number; slug: string; text: string }>;
}

const { headings = [] } = Astro.props;
const tocHeadings = headings.filter((heading) => heading.depth >= 2 && heading.depth <= 3);
const toggleId = `mini-toc-toggle-${Math.random().toString(36).slice(2, 7)}`;
const panelId = `mini-toc-panel-${Math.random().toString(36).slice(2, 7)}`;
---

{tocHeadings.length > 0 && (
	<div class="mini-toc" data-mini-toc data-open="false">
		<button
			id={toggleId}
			class="mini-toc-toggle"
			type="button"
			aria-expanded="false"
			aria-controls={panelId}
			data-mini-toc-toggle
		>
			<svg viewBox="0 0 24 24" aria-hidden="true" class="mini-toc-icon">
				<path d="M5 7h14M5 12h10M5 17h6" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" />
			</svg>
			<span class="mini-toc-label" data-mini-toc-label>Sections</span>
		</button>
		<div class="mini-toc-panel" id={panelId} data-mini-toc-panel hidden>
			<div class="mini-toc-header">
				<span>Jump to section</span>
				<button type="button" class="mini-toc-close" data-mini-toc-close>
					Close
				</button>
			</div>
			<ol class="mini-toc-list">
				{tocHeadings.map((heading) => (
					<li class={`mini-toc-item depth-${heading.depth}`}>
						<a href={`#${heading.slug}`} class="mini-toc-link toc-link" data-heading={heading.slug}>
							{heading.text}
						</a>
					</li>
				))}
			</ol>
		</div>
	</div>
)}

<script is:inline>
	const initMiniToc = () => {
		const container = document.querySelector('[data-mini-toc]');
		if (!container || container.dataset.initialized === 'true') return;
		container.dataset.initialized = 'true';

		const toggle = container.querySelector('[data-mini-toc-toggle]') as HTMLButtonElement | null;
		const panel = container.querySelector('[data-mini-toc-panel]') as HTMLElement | null;
		const label = container.querySelector('[data-mini-toc-label]') as HTMLElement | null;
		const closeBtn = container.querySelector('[data-mini-toc-close]') as HTMLButtonElement | null;
		const links = panel?.querySelectorAll('.mini-toc-link') ?? [];
		let isOpen = false;
		let activeHeading = '';

		const setOpen = (value) => {
			isOpen = value;
			container.dataset.open = value ? 'true' : 'false';
			if (panel) {
				panel.hidden = !value;
			}
			toggle?.setAttribute('aria-expanded', value ? 'true' : 'false');
			if (value) {
				requestAnimationFrame(() => {
					const firstLink = panel?.querySelector('.mini-toc-link') as HTMLElement | null;
					firstLink?.focus();
				});
			}
		};

		const updateLabel = (text) => {
			if (!label) return;
			label.textContent = text || 'Sections';
		};

		const handleScrollUpdate = () => {
			const headings = Array.from(links).map((link) => {
				const id = link.getAttribute('data-heading');
				return id ? document.getElementById(id) : null;
			}).filter(Boolean);

			let current = '';
			const offset = window.scrollY + window.innerHeight * 0.2;
			headings.forEach((heading) => {
				const top = heading.getBoundingClientRect().top + window.scrollY;
				if (top <= offset) {
					current = heading.id;
				}
			});

			if (current && current !== activeHeading) {
				activeHeading = current;
				const activeLink = panel.querySelector(`.mini-toc-link[data-heading="${current}"]`);
				if (activeLink) {
					updateLabel(activeLink.textContent?.trim() ?? 'Sections');
				}
			}
		};

		const throttledUpdate = () => {
			window.requestAnimationFrame(handleScrollUpdate);
		};

		window.addEventListener('scroll', throttledUpdate, { passive: true });
		window.addEventListener('resize', throttledUpdate, { passive: true });
		throttledUpdate();

		toggle?.addEventListener('click', () => setOpen(!isOpen));
		closeBtn?.addEventListener('click', () => setOpen(false));
		panel?.addEventListener('click', (event) => {
			const target = (event.target as HTMLElement)?.closest('.mini-toc-link');
			if (target) {
				setOpen(false);
			}
		});

		document.addEventListener('keydown', (event) => {
			if (event.key === 'Escape' && isOpen) {
				setOpen(false);
			}
		});
	};

	const setupMiniToc = () => {
		requestAnimationFrame(initMiniToc);
	};

	document.addEventListener('astro:page-load', setupMiniToc);
	document.addEventListener('DOMContentLoaded', setupMiniToc);
</script>

<style>
	.mini-toc {
		position: fixed;
		bottom: 1.5rem;
		right: 1.25rem;
		z-index: 900;
		display: flex;
